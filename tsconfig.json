{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@widgets/*": [
                "src/widgets/*"
            ],
            "@features/*": [
                "src/features/*"
            ]
        }
    }
}